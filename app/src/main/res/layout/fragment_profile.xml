<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F2F2F8"
    tools:context=".Fragments.ProfileFragment"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile"
        android:layout_marginTop="70dp"
        android:textSize="35sp"
        android:textColor="@color/black"
        android:fontFamily="@font/bold"
        android:textStyle="bold"/>

    <androidx.cardview.widget.CardView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="40dp"
        app:cardCornerRadius="38dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/splash_purple"
            android:gravity="center">

            <ImageView

                android:layout_width="170dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:src="@drawable/student"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/Profile_txtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:layout_marginTop="25dp"
        android:textColor="@color/grad_2"
        android:textStyle="bold"
        android:fontFamily="@font/bold"
        android:textSize="25sp"/>

    <TextView
        android:id="@+id/Profile_txtEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="abcd1234@gmail.com"
        android:layout_marginTop="5dp"
        android:inputType="textEmailAddress"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:fontFamily="@font/regular"/>

    <TextView
        android:id="@+id/Profile_txtUid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:text="21BCSXXX"
        android:textColor="@color/black"
        android:fontFamily="@font/regular"
        android:textSize="15sp"
        android:layout_marginTop="5dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnEditProf"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/button_purple_rounded"
        android:fontFamily="@font/bold"
        android:inputType="textCapSentences"
        android:elevation="10dp"
        android:padding="1dp"
        android:text="Edit Profile"
        android:shadowColor="#7061D7"
        android:textColor="#FFFFFF"
        android:textSize="17sp"
        android:textStyle="bold" />

</LinearLayout>